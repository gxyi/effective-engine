.item{
  display: flex;
  padding: 15rpx;
  margin: 10rpx;
  align-items: center;
  border-bottom: 1px solid gray;
}
.tip{
  font-size: 40rpx;
  color: rgb(46, 45, 44);
}
input{
  flex: 1;
  border: 1px solid gray;
  margin: 10rpx;
  border-radius: 20rpx;
  padding: 10rpx;
}
.img{
  width: 200rpx;
  height: 200rpx;
  margin-left: 40rpx;
  border-radius: 50% ;
}
.btn{
  margin: 70rpx;
  border-radius: 50rpx;
  background: #1296db;
  color: white;
}