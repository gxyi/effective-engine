page{
  background: #1296db;
}
/* 头部区域 */
.top_root{
  display: flex;
  align-items: center;
  margin: 40rpx;
}
.top_img{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-right: 40rpx;
}
.top_name{
  font-size: 44rpx;
  color: white;
}
.login_out{
  font-size: 33rpx;
  margin-top: 20rpx;
  color:rgb(168, 168, 168);
}
/* 条目 */
.item{
  display: flex;
  align-items: center;
  height: 90rpx;
  background: white;
  border-bottom: 2rpx solid #1296db;
}
.item_name{
  font-size: 40rpx;
  margin-left: 30rpx;
}
.right_arrow{
  border: solid black;
  border-width: 0 3px 3px 0;
  padding: 3px;
  position: absolute;
  right: 15px;
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
}
button{
  width: 100%;
  background: white;
  border: none;
  text-align: left;
  padding: 0;
  margin: 0;
  line-height: 1.3;
  font-size: 40rpx;
}
button::after{
  border: none;
  border-radius: 0;
}
.button_hover{
  color: black;
  background-color: #fff;
}
